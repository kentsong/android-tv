<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/target_img"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@color/gray_light_alpha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/target_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/get_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取图片1"/>

        <Button
            android:id="@+id/get_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取图片2"/>

        <Button
            android:id="@+id/get_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取图片3"/>

        <Button
            android:id="@+id/clear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除图片"/>

    </LinearLayout>






</android.support.constraint.ConstraintLayout>