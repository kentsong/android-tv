<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="区块一"
        tools:text="区块一"
        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="区块二"
        android:layout_marginTop="10dp"
        tools:text="区块二"
        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        app:layout_constraintTop_toBottomOf="@+id/d1"
        app:layout_constraintStart_toStartOf="@+id/d1"
        app:layout_constraintEnd_toStartOf="@+id/d3"

        />

    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="区块三"


        tools:text="区块三"
        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        app:layout_constraintTop_toTopOf="@+id/d2"
        app:layout_constraintStart_toEndOf="@+id/d2"
        app:layout_constraintEnd_toEndOf="@+id/d1"

        />


    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="区块四"
        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/d2"
        app:layout_constraintStart_toStartOf="parent"

        />

    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="区块五"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        app:layout_constraintTop_toBottomOf="@+id/d4"
        app:layout_constraintStart_toStartOf="@+id/d4"
        app:layout_constraintEnd_toStartOf="@+id/d6"

        />

    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="区块六"


        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        app:layout_constraintTop_toTopOf="@+id/d5"
        app:layout_constraintStart_toEndOf="@+id/d5"
        app:layout_constraintEnd_toStartOf="@+id/d7"

        />

    <com.example.kent.tv_view_focus.view.LabelView
        android:id="@+id/d7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="区块七"


        android:gravity="center"
        android:textColor="#111111"
        android:background="#dedededd"
        app:layout_constraintTop_toTopOf="@+id/d5"
        app:layout_constraintStart_toEndOf="@+id/d6"
        app:layout_constraintEnd_toEndOf="@+id/d4"

        />






</android.support.constraint.ConstraintLayout>