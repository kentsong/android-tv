<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cece9e"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_top"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="上标"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="左标"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rv_selection"
        app:layout_constraintBottom_toBottomOf="parent" />


    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="右标"
        app:layout_constraintStart_toEndOf="@+id/rv_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <com.example.kent.tv_view_focus.feature.keepfocus.FocusKeepRecyclerView
        android:id="@+id/rv_selection"
        android:layout_width="0dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_top"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintEnd_toStartOf="@+id/btn_right"
        app:layout_constraintBottom_toTopOf="@+id/btn_down" />


    <Button
        android:id="@+id/btn_down"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="下标"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>